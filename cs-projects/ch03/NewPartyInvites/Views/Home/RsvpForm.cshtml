@model NewPartyInvites.Models.GuestResponse

@{
    Layout = null;
}
<!DOCTYPE html>
    <html>
        <head>
            <meta name="viewport" content=width=device-width />
            <title>RsvpForm</title>
        </head>
        <body>
            <div><form asp-action="RspvForm" method="post">
                    <p>
                        <label asp-for="Name">Your Name: </label>
                        <input asp-for="Name" />
                    </p>
                    <p>
                        <label asp-for="Email">Your Email: </label>
                        <input asp-for="Email" />
                    </p>
                    <p>
                        <label asp-for="Phone">Your Phone: </label>
                        <input asp-for="Phone" />
                    </p>
                    <p>
                        <label>Will You Attend?</label>
                        <select asp-for="WillAttend">
                            <option asp-for="">Chose an Option: </option>
                            <option asp-for="yes">Yes, I'll be there</option>
                            <option asp-for="no">No, I can't make it</option>
                        </select>
                    </p>
                    <button type="submit">Submit RSVP</button>
                </form>
            </div>
        </body>
    </html>
